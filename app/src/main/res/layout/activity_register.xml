<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/wdp45"
            android:layout_height="@dimen/wdp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wdp20"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_back"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:text=" 注 册 "
            android:textColor="@color/white"
            android:textSize="@dimen/wdp37" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="@dimen/wdp450"
        android:layout_height="@dimen/wdp80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/wdp105"
        android:background="@color/white"
        android:drawableBottom="@mipmap/bg_input"
        android:hint="请输入邮箱／手机号"
        android:lines="1"
        android:maxLength="32"
        android:paddingLeft="@dimen/wdp70"
        android:textColor="@color/light_black"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/wdp28" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="@dimen/wdp450"
        android:layout_height="@dimen/wdp80"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:drawableBottom="@mipmap/bg_input"
        android:hint="请输入密码"
        android:inputType="text"
        android:lines="1"
        android:paddingLeft="@dimen/wdp70"
        android:textColor="@color/light_black"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/wdp28" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/wdp450"
        android:layout_height="@dimen/wdp61"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/wdp35"
        android:background="@drawable/download_bg"
        android:text=" 注 册 "
        android:textColor="@color/white"
        android:textSize="@dimen/wdp28" />
    <LinearLayout
        android:id="@+id/provision"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wdp40"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/wdp35"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/wdp16"
            android:text="注册表示您同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wdp16"
            android:textColor="@color/default_bg"
            android:text="用户服务协议"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wdp40"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/wdp35"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/wdp26"
            android:text="已有账号？"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wdp26"
            android:textColor="@color/default_bg"
            android:text="直接登陆"/>
    </LinearLayout>
</LinearLayout>