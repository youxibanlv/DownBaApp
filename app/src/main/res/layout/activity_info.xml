<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp80"
            android:background="@color/default_bg"
            android:id="@+id/body"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/wdp45"
                android:layout_height="@dimen/wdp45"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/wdp20"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="详情"
                android:maxWidth="@dimen/wdp400"
                android:textColor="@color/white"
                android:textSize="@dimen/wdp28" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/wdp10"
            android:ellipsize="end"
            android:maxLength="18"
            android:lines="1"
            android:textSize="@dimen/wdp36" />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/wdp10"
            android:paddingTop="@dimen/wdp5"
            android:textSize="@dimen/wdp22" />


        <TextView
            android:id="@+id/info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wdp30"
            android:paddingLeft="@dimen/wdp10"
            android:paddingRight="@dimen/wdp10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/wdp10"
            android:textColor="@color/text_black"
            android:text="猜你喜欢:"
            android:textSize="@dimen/wdp30" />
        <com.strike.downba_app.view.NoScrollGridView
            android:id="@+id/gv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wdp20"
            android:layout_marginRight="@dimen/wdp20"
            android:layout_marginTop="@dimen/wdp13"
            android:horizontalSpacing="@dimen/wdp5"
            android:numColumns="3"
            android:verticalSpacing="@dimen/wdp5" />
    </LinearLayout>
</ScrollView>
