<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/wdp540"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/translucent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp50"
        android:gravity="center"
        android:layout_marginTop="@dimen/wdp20"
        android:paddingLeft="@dimen/wdp30"
        android:paddingRight="@dimen/wdp30"
        android:textColor="@color/default_bg"
        android:textSize="@dimen/wdp30" />
    <TextView
        android:layout_below="@id/dialog_title"
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/wdp180"
        android:gravity="center"
        android:paddingLeft="@dimen/wdp30"
        android:paddingRight="@dimen/wdp30"
        android:textColor="@color/default_bg"
        android:textSize="@dimen/wdp24" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_content"
        android:background="@color/bg_divider" />

    <LinearLayout
        android:id="@+id/btn_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp89"
        android:layout_below="@id/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/wdp30" />

        <View
            android:id="@+id/linevetical"
            android:layout_width="@dimen/wdp1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/left_btn"
            android:layout_weight="0"
            android:background="@color/bg_divider" />

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@color/default_bg"
            android:textSize="@dimen/wdp30" />
    </LinearLayout>

</RelativeLayout>