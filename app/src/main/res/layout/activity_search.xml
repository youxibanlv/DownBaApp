<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:background="@color/light_black"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/rv_back"
            android:layout_width="@dimen/wdp45"
            android:layout_height="@dimen/wdp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wdp20"
            android:src="@mipmap/icon_back"/>
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/wdp45"
            android:layout_height="@dimen/wdp45"
            android:layout_marginRight="@dimen/wdp20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_search"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp55"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wdp20"
            android:layout_marginRight="@dimen/wdp20"
            android:layout_toRightOf="@id/rv_back"
            android:layout_toLeftOf="@id/btn_search">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_search"
                android:paddingRight="@dimen/wdp25"
                android:paddingLeft="@dimen/wdp20"
                android:hint="输入搜索关键词"
                android:singleLine="true"
                android:maxLength="20"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/wdp24"
                />
        </RelativeLayout>

    </RelativeLayout>
    <com.strike.downba_app.view.library.PullToRefreshListView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:paddingBottom="30dp"
        android:scrollbars="none"
        android:smoothScrollbar="true" />
</LinearLayout>