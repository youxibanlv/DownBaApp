<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnLeft_titlelayout"
            android:layout_width="@dimen/wdp45"
            android:layout_height="@dimen/wdp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wdp20"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:text="@string/provision"
            android:textColor="@color/white"
            android:textSize="@dimen/wdp37" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <TextView
            android:id="@+id/content1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wdp26"
            android:layout_marginRight="@dimen/wdp26"
            android:layout_marginTop="@dimen/wdp36"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/wdp24" />
    </ScrollView>

</LinearLayout>
