<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp80"
            android:background="@color/default_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/wdp45"
                android:layout_height="@dimen/wdp45"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/wdp20"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/wdp37" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wdp105"
            android:drawableBottom="@mipmap/bg_input"
            android:background="@color/white"
            android:hint="请输入邮箱／手机号"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="32"
            android:paddingLeft="@dimen/wdp70"
            android:textColor="@color/light_black"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp80"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@mipmap/bg_input"
            android:hint="请输入密码"
            android:background="@color/white"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="@dimen/wdp70"
            android:textColor="@color/light_black"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp61"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wdp35"
            android:background="@mipmap/bg_btn_login"
            android:text="@string/login"
            android:textColor="@color/default_bg"
            android:textSize="@dimen/wdp28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wdp47"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp164"
                android:paddingLeft="@dimen/wdp20"
                android:paddingRight="@dimen/wdp10"
                android:text="@string/register"
                android:textColor="@color/default_bg"
                android:textSize="@dimen/wdp30" />

            <TextView
                android:id="@+id/tv_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp56"
                android:layout_weight="1"
                android:text="@string/forget_pass"
                android:textColor="@color/default_bg"
                android:textSize="@dimen/wdp30" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wdp20"
            android:layout_marginTop="@dimen/wdp70"
            android:text="其它方式登陆"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/wdp34"
            android:id="@+id/textView" />

        <LinearLayout
            android:id="@+id/login_weixin"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp61"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wdp50"
            android:background="@mipmap/bg_btn_weixin"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/wdp34"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp142"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_weixin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp11"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/wdp30"
                android:text="@string/login_weixin"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_qq"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp61"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wdp40"
            android:background="@mipmap/bg_btn_qq"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/wdp34"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp142"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_qq"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp11"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/wdp30"
                android:text="@string/qq"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_weibo"
            android:layout_width="@dimen/wdp450"
            android:layout_height="@dimen/wdp61"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wdp40"
            android:background="@mipmap/bg_btn_weibo"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/wdp34"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp142"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_weibo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wdp11"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/wdp30"
                android:text="@string/login_weibo"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
