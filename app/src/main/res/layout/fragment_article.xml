<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp72"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/app_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:text="@string/subject"
            android:drawableBottom="@drawable/radio_button_bg"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="@dimen/wdp29"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/app_original"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="@string/original"
            android:gravity="center"
            android:drawableBottom="@drawable/radio_button_bg"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="@dimen/wdp29"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/app_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="@string/test"
            android:gravity="center"
            android:drawableBottom="@drawable/radio_button_bg"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="@dimen/wdp29"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/app_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="@string/news"
            android:gravity="center"
            android:drawableBottom="@drawable/radio_button_bg"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="@dimen/wdp29"
            android:layout_weight="1"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/fl_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>