<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:background="@color/light_black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/wdp45"
            android:layout_height="@dimen/wdp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wdp20"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/uer_center"
            android:textColor="@color/white"
            android:textSize="@dimen/wdp30" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/wdp40"
            android:text="保 存"
            android:textColor="@color/white"
            android:textSize="@dimen/wdp30" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/wdp10"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/wdp20"
            android:src="@mipmap/default_usericon" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/wdp20"
        android:paddingRight="@dimen/wdp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账    号："
            android:textSize="@dimen/wdp28" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="13608394815" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/wdp20"
        android:paddingRight="@dimen/wdp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵    称："
            android:textSize="@dimen/wdp28" />

        <EditText
            android:id="@+id/edt_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_search"
            android:hint="请输入昵称"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/wdp20"
        android:paddingRight="@dimen/wdp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积    分："
            android:textSize="@dimen/wdp28" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_search"
            android:text="90"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/wdp20"
        android:paddingRight="@dimen/wdp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电    话："
            android:textSize="@dimen/wdp28" />

        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_search"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/wdp20"
        android:paddingRight="@dimen/wdp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝："
            android:textSize="@dimen/wdp28" />

        <EditText
            android:id="@+id/edt_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_search"
            android:hint="请输入支付宝账号"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/wdp28" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录" />
</LinearLayout>